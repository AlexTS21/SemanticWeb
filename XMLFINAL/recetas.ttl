@prefix : <http://www.semanticweb.org/recetario#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:Recetario a owl:Ontology ;
    rdfs:label "Ontología del Recetario"@es ;
    rdfs:comment "Ontología para representar recetas de cocina según el plato del buen comer"@es .

:agua_de_limon a :Receta ;
    :dificultad "Fácil" ;
    :duracionMinutos 10 ;
    :nombre "Agua de limon" ;
    :tieneIngrediente :ing_agua_de_limon_0,
        :ing_agua_de_limon_1,
        :ing_agua_de_limon_2 ;
    :tienePaso :paso_agua_de_limon_0,
        :paso_agua_de_limon_1,
        :paso_agua_de_limon_2 ;
    :usaUtensilio :cuchara,
        :cuchillo,
        :olla,
        :tabladecortar .

:cantidad a owl:DatatypeProperty ;
    rdfs:label "cantidad"@es ;
    rdfs:domain :IngredientePorReceta ;
    rdfs:range xsd:decimal .

:descripcion a owl:DatatypeProperty ;
    rdfs:label "descripción"@es ;
    rdfs:domain :Paso ;
    rdfs:range xsd:string .

:dificultad a owl:DatatypeProperty ;
    rdfs:label "dificultad"@es ;
    rdfs:domain :Receta ;
    rdfs:range [ a owl:DataRange ;
            owl:oneOf ( "Fácil" "Media" "Difícil" ) ] .

:duracionMinutos a owl:DatatypeProperty ;
    rdfs:label "duración en minutos"@es ;
    rdfs:domain :Receta ;
    rdfs:range xsd:integer .

:esDeTipo a owl:ObjectProperty ;
    rdfs:label "es de tipo"@es ;
    rdfs:domain :Ingrediente ;
    rdfs:range [ a owl:Class ;
            owl:oneOf ( :Fruta :Verdura :Cereal :Leguminosa :ProductoOrigenAnimal :Grasa ) ] .

:kilogramo a :UnidadMedida ;
    rdfs:label "kilogramo"@es .

:litro a :UnidadMedida ;
    rdfs:label "litro"@es .

:nombre a owl:DatatypeProperty ;
    rdfs:label "nombre"@es ;
    rdfs:domain :Receta ;
    rdfs:range xsd:string .

:numeroPaso a owl:DatatypeProperty ;
    rdfs:label "número de paso"@es ;
    rdfs:domain :Paso ;
    rdfs:range xsd:integer .

:requiereIngrediente a owl:ObjectProperty ;
    rdfs:label "requiere ingrediente"@es ;
    rdfs:domain :Paso ;
    rdfs:range :Ingrediente .

:sandwich a :Receta ;
    :dificultad "Fácil" ;
    :duracionMinutos 10 ;
    :nombre "Sandwich Clásico" ;
    :tieneIngrediente :ingSandwich1,
        :ingSandwich2,
        :ingSandwich3,
        :ingSandwich4,
        :ingSandwich5,
        :ingSandwich6 ;
    :tienePaso :pasoSandwich1,
        :pasoSandwich2,
        :pasoSandwich3,
        :pasoSandwich4 ;
    :usaUtensilio :cuchillo,
        :plato,
        :tablaCortar,
        :tostadora .

:taza a :UnidadMedida ;
    rdfs:label "taza"@es .

:tieneIngrediente a owl:ObjectProperty ;
    rdfs:label "tiene ingrediente"@es ;
    rdfs:domain :Receta ;
    rdfs:range :IngredientePorReceta .

:tienePaso a owl:ObjectProperty ;
    rdfs:label "tiene paso"@es ;
    rdfs:domain :Receta ;
    rdfs:range :Paso .

:tieneUnidadMedida a owl:ObjectProperty ;
    rdfs:label "tiene unidad de medida"@es ;
    rdfs:domain :IngredientePorReceta ;
    rdfs:range :UnidadMedida .

:tortillaPatatas a :Receta ;
    :dificultad "Media" ;
    :duracionMinutos 30 ;
    :nombre "Tortilla de Patatas Española" ;
    :tieneIngrediente :ingTortilla1,
        :ingTortilla2,
        :ingTortilla3,
        :ingTortilla4,
        :ingTortilla5 ;
    :tienePaso :pasoTortilla1,
        :pasoTortilla2,
        :pasoTortilla3,
        :pasoTortilla4,
        :pasoTortilla5 ;
    :usaUtensilio :batidora,
        :bol,
        :cuchillo,
        :espátula,
        :sarten,
        :tablaCortar .

:usaIngrediente a owl:ObjectProperty ;
    rdfs:label "usa ingrediente"@es ;
    rdfs:domain :IngredientePorReceta ;
    rdfs:range :Ingrediente .

:usaUtensilio a owl:ObjectProperty ;
    rdfs:label "usa utensilio"@es ;
    rdfs:domain :Receta ;
    rdfs:range :Utensilio .

:Fruta a owl:Class ;
    rdfs:label "Fruta"@es ;
    rdfs:comment "Ingredientes del grupo de frutas"@es ;
    rdfs:subClassOf :Ingrediente .

:Leguminosa a owl:Class ;
    rdfs:label "Leguminosa"@es ;
    rdfs:comment "Ingredientes del grupo de leguminosas"@es ;
    rdfs:subClassOf :Ingrediente .

:agua a :Ingrediente ;
    rdfs:label "agua" .

:azucar a :Ingrediente ;
    rdfs:label "azucar" .

:batidora a :Utensilio ;
    rdfs:label "batidora"@es .

:bol a :Utensilio ;
    rdfs:label "bol"@es .

:cuchara a :Utensilio ;
    rdfs:label "cuchara" .

:cucharada a :UnidadMedida ;
    rdfs:label "cucharada"@es .

:cucharadita a :UnidadMedida ;
    rdfs:label "cucharadita"@es .

:espátula a :Utensilio ;
    rdfs:label "espátula"@es .

:gramo a :UnidadMedida ;
    rdfs:label "gramo"@es .

